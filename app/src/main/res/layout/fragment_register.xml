<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/loginbg1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:src="@drawable/loginbg2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/loginbg3" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/loginbg4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/li_googlefb"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Atau lanjutkan dengan"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/li_googlefb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bggooglefb"
                android:src="@drawable/icgoogle"
                android:elevation="8dp"
                android:translationZ="4dp"
                android:foreground="?attr/selectableItemBackground"/>

            <ImageButton
                android:id="@+id/btn_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bggooglefb"
                android:src="@drawable/icfb"
                android:elevation="8dp"
                android:translationZ="4dp"
                android:foreground="?attr/selectableItemBackground"/>
        </LinearLayout>

        <TextView
            android:id="@+id/sudah_memiliki_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_daftar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Sudah memiliki akun"
            android:textColor="@color/primary"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_daftar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/edt_konfirmSandiRegister"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_background_masuk"
            android:text="Daftar"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_konfirmSandiRegister"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/edt_sandiRegister"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bgsandi"
            android:hint="Konfirmasi kata sandi"
            android:inputType="text|textPassword"
            android:paddingHorizontal="20dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_emailRegister"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/deskrip_buat_akun"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="92dp"
            android:background="@drawable/bgemail"
            android:hint="Email"
            android:inputType="text|textEmailAddress"
            android:paddingHorizontal="20dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_sandiRegister"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/edt_emailRegister"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bgsandi"
            android:hint="Sandi"
            android:inputType="text|textPassword"
            android:paddingHorizontal="20dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title_buat_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Buat Akun"
            android:textColor="@color/primary"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/deskrip_buat_akun"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_buat_akun"
            android:layout_centerHorizontal="true"
            android:text="Lorem ipsum dolor sit amet,consecture adipsdih knsd" />
    </RelativeLayout>
</RelativeLayout>