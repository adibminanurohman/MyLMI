    <fragment
        android:id="@+id/zakatFragment"
        android:name="com.laznas.mylmi.fragment.ZakatFragment"
        android:label="fragment_zakat"
        tools:layout="@layout/fragment_zakat" />
    <fragment
        android:id="@+id/qurbanFragment"
        android:name="com.laznas.mylmi.fragment.QurbanFragment"
