<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav"
    app:startDestination="@id/berandaFragment">

    <fragment
        android:id="@+id/berandaFragment"
        android:name="com.laznas.mylmi.fragment.BerandaFragment"
        android:label="Beranda"
        tools:layout="@layout/fragment_beranda" >
        <action
            android:id="@+id/action_berandaFragment_to_infaqFragment"
            app:destination="@id/infaqFragment" />
        <action
            android:id="@+id/action_berandaFragment_to_wakafFragment"
            app:destination="@id/wakafFragment" />
        <action
            android:id="@+id/action_berandaFragment_to_zakatFragment"
            app:destination="@id/zakatFragment" />
        <action
            android:id="@+id/action_berandaFragment_to_qurbanFragment"
            app:destination="@id/qurbanFragment" />
    </fragment>
    <fragment
        android:id="@+id/penyaluranFragment"
        android:name="com.laznas.mylmi.fragment.PenyaluranFragment"
